{
  "name": "site2rag",
  "version": "0.1.3",
  "description": "CLI tool to convert websites into RAG-ready local markdown knowledge bases with AI-powered content improvement.",
  "main": "index.js",
  "bin": {
    "site2rag": "bin/site2rag.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chadananda/site2rag.git"
  },
  "author": "chadananda",
  "license": "MIT",
  "scripts": {
    "site2rag": "node ./bin/site2rag.js",
    "test:preprocessing": "NODE_ENV=test node tests/unit/preprocessing.test.js",
    "start": "node index.js",
    "test": "vitest run",
    "test:all": "vitest run",
    "db-test": "vitest run tests/unit/db.test.js",
    "test:ocean": "rm -rf ./tests/tmp/sites/oceanoflights && node ./bin/site2rag.js oceanoflights.org --limit 10 --output ./tests/tmp/sites/oceanoflights",
    "test:oceanupdate": "rm -rf ./tests/tmp/sites/oceanoflights && node ./bin/site2rag.js oceanoflights.org --limit 30 --output ./tests/tmp/sites/oceanoflights",
    "test:oceanupdate2": "rm -rf ./tests/tmp/sites/oceanoflights && node ./bin/site2rag.js oceanoflights.org --limit 100 --output ./tests/tmp/sites/oceanoflights",
    "test:pdf": "node ./scripts/test-pdf-links.js",
    "test:domain": "node ./scripts/test-domain-filtering.js",
    "test:bahai": "rm -rf ./tests/tmp/sites/bahai-education && node ./bin/site2rag.js bahai-education.org --limit 20 --output ./tests/tmp/sites/bahai-education --flat"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "figlet": "^1.7.0",
    "figures": "^5.0.0",
    "gray-matter": "^4.0.3",
    "node-fetch": "^3.3.2",
    "p-limit": "^6.2.0",
    "prompts": "^2.4.2",
    "remark": "^15.0.1",
    "remark-reference-links": "^7.0.0",
    "remark-stringify": "^11.0.0",
    "robots-parser": "^3.0.1",
    "turndown": "^7.1.2"
  },
  "type": "module",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/chadananda/site2rag/issues"
  },
  "homepage": "https://github.com/chadananda/site2rag#readme",
  "devDependencies": {
    "vitest": "^3.2.2"
  }
}
